{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "dialogue.schema.json",
  "title": "File dialoghi CryoFall",
  "type": "array",

  "items": { "$ref": "#/$defs/dialogue" },

  "$defs": {
    "dialogue": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "id":      { "type": "string" },
        "room":    
          { "type": "string",
            "enum":  ["intro","ibernazione","east_corridoio","stanza_tecnica"]},
        "speakerName": 
        { "type": "string",
          "enum":  ["Introduzione","Narratore","<playerName>","<mainHelper>","<robotName>","<secondHelper>","<assistant>"]},
        "character": {
          "type": "string",
          "enum": ["intro","main", "helper", "enemy", "narrator"]
        },
        "kind": {
          "type": "string",
          "enum": ["intro","dialogue", "narration", "thought"]
        },
        "action": {
          "type": "string",
          "enum": ["inputName"]
        },
        "text":    { "type": "string" },
        "choices": {
          "type": "array",
          "items": { "$ref": "#/$defs/choice" }
        },
        "next": {"type": "string"}
      },
      

      "required": ["id", "room" ,"speakerName","character", "kind", "text"]
    },

    "choice": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "label": { "type": "string" },
        "next":  { "type": "string" }
      },
      "required": ["label", "next"]
    }
    
    
  }
}
